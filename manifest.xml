<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" 
           xsi:type="MailApp">

  <!-- Basic Add-in Information -->
  <Id>12345678-abcd-1234-5678-123456789012</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>AI Meeting Coordinator PoC</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <!-- Add-in Display Information -->
  <DisplayName DefaultValue="AI Meeting Coordinator"/>
  <Description DefaultValue="Automate meeting coordination with AI assistance - Proof of Concept"/>
  <IconUrl DefaultValue="https://dsrado.github.io/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://dsrado.github.io/assets/icon-80.png"/>
  <SupportUrl DefaultValue="https://dsrado.github.io/support"/>
  
  <!-- Supported Hosts -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>
  
  <!-- Form Settings -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://dsrado.github.io/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <!-- Permissions -->
  <Permissions>ReadWriteMailbox</Permissions>
  
  <!-- Rule Collection -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Read"/>
  </Rule>
  
  <!-- Version Overrides for Modern Outlook -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    
    <!-- Requirements for modern features -->
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <!-- Hosts configuration -->
    <Hosts>
      <Host xsi:type="MailHost">
        
        <!-- Desktop Form Factor -->
        <DesktopFormFactor>
          
          <!-- Function File (for commands) -->
          <FunctionFile resid="Commands.Url"/>
          
          <!-- Extension Points -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                
                <!-- Task Pane Button -->
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                
                <!-- Quick Action Button -->
                <Control xsi:type="Button" id="msgReadQuickAction">
                  <Label resid="QuickAction.Label"/>
                  <Supertip>
                    <Title resid="QuickAction.Label"/>
                    <Description resid="QuickAction.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>quickCoordinate</FunctionName>
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
          <!-- Compose Extension Point -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="GroupLabel"/>
                
                <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId2</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://dsrado.github.io/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://dsrado.github.io/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://dsrado.github.io/assets/icon-80.png"/>
      </bt:Images>
      
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://dsrado.github.io/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://dsrado.github.io/taskpane.html"/>
      </bt:Urls>
      
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="AI Meeting Coordinator"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Coordinate Meeting"/>
        <bt:String id="QuickAction.Label" DefaultValue="Quick Coordinate"/>
      </bt:ShortStrings>
      
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open AI Meeting Coordinator to automate meeting scheduling"/>
        <bt:String id="QuickAction.Tooltip" DefaultValue="Quickly coordinate a meeting using AI with current email context"/>
      </bt:LongStrings>
    </Resources>
    
  </VersionOverrides>
</OfficeApp>

